###############################################
# Example environment file (.env.example)
# Copy to .env and adjust values as needed.
# Do NOT commit real secrets.
###############################################

# Optional static API key required on non-health routes when set.
# Provide this header on requests: X-API-Key: <value>
API_KEY=change-me

# Comma-separated list of allowed origins for CORS. Use * for all.
# Example: https://fantasy_api.chrispatten.dev,https://example.com
CORS_ALLOW_ORIGINS=*

# Log level: CRITICAL, ERROR, WARNING, INFO, DEBUG
LOG_LEVEL=INFO

# App listen port (uvicorn)
PORT=8000

# Path to Yahoo OAuth token JSON (mounted read-only in Docker)
YAHOO_OAUTH_FILE=/data/oauth2.json

# Rate limiting (per IP)
RATE_LIMIT_PER_MIN=60
RATE_LIMIT_BURST=10

# Developer convenience (used by Makefile/docker tags)
# OWNER is your GitHub username or org for GHCR image tags
OWNER=your-gh-username
